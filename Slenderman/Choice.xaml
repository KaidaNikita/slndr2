<Window x:Class="Slenderman.Choice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slenderman"
        mc:Ignorable="d"
        Title="Choice" Height="450" Width="800">
	<Window.Background>
		<ImageBrush ImageSource="Textures/Slender Man 2.jpg" Stretch="Fill">

		</ImageBrush>
	</Window.Background>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="60*"/>
			<ColumnDefinition Width="60*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition  Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Button Click="Button_Click2" Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="2" Content="Forest" Background="Transparent" Foreground="LightGray"  FontSize="25"
         Height="Auto"/>
		<Button Grid.Column="1" Grid.Row="1"  Grid.ColumnSpan="2" Content="Maze" Background="Transparent" Foreground="LightGray"  FontSize="25"
         Height="Auto" Click="Button_Click" />

	</Grid>
</Window>
